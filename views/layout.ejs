<html>
      <title>
        <%= title %>
      </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
        <%- style %>
    <body>
      <%- include('_header'); %>
<!-- including flash message with out noty .js -->
      <!-- <%  if(flash.success && flash.success.length > 0){ %>
         <h5>
           <%= flash.success %>
         </h5> 
      <%}%> -->
      <main id="layout-main">
        <%- body %>
      </main>
        <%- include('_footer'); %>
        <%- script %>
        <!-- new script tag to add flash mesages with noty.js -->
        <script>
         <%  if (flash.success && flash.success.length > 0){ %>
          new Noty({
          theme: 'relax',
          text: '<%= flash.success %>',
          type: 'success',
          layout : 'topRight',
          timeout : 1500
          }).show();
          <%}%>
// for error 
          <%  if (flash.error && flash.error.length > 0){ %>
          new Noty({
          theme: 'relax',
          text: '<%= flash.error %>',
          type: 'error',
          layout : 'topRight',
          timeout : 1500
          }).show();
          <%}%>
        </script>
    </body>
</html>